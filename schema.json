{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/work-template",
    "type": "object",
    "properties": {
        "category": {
            "type": "string",
            "enum": [
                "product_teams",
                "devops",
                "company_wide",
                "leadership",
                "design"
            ]
        },
        "useCase": {
            "type": "string",
            "minlength": 1
        },
        "description": {
            "$ref": "#/$defs/description"
        },
        "visibility": {
            "type": "string",
            "enum": [
                "public",
                "private"
            ]
        },
        "featureFlag": {
            "$ref": "#/$defs/featureFlag"
        },
        "content": {
            "type": "array",
            "items": { "$ref": "#/$defs/content" }
        }
    },
    "required": [
        "category",
        "useCase",
        "description",
        "visibility",
        "content"
    ],
    "additionalProperties": false,
    "$defs": {
        "content": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "channel": {
                            "$ref": "#/$defs/channel"
                        }
                    },
                    "required": [
                        "channel"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "board": {
                            "$ref": "#/$defs/board"
                        }
                    },
                    "required": [
                        "board"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "playbook": {
                            "$ref": "#/$defs/playbook"
                        }
                    },
                    "required": [
                        "playbook"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "integration": {
                            "$ref": "#/$defs/integration"
                        }
                    },
                    "required": [
                        "integration"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "channel": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string",
                    "minlength": 1
                },
                "purpose": {
                    "type": "string"
                },
                "playbook": {
                    "type": "string"
                },
                "illustration": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "illustration"
            ],
            "additionalProperties": false
        },
        "board": {
            "type": "object",
            "properties": {
                "template": {
                    "type": "string",
                    "minlength": 1
                },
                "name": {
                    "type": "string",
                    "minlength": 1
                },
                "channel": {
                    "type": "string"
                },
                "illustration": {
                    "type": "string"
                }
            },
            "required": [
                "template",
                "name",
                "illustration"
            ],
            "additionalProperties": false
        },
        "playbook": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "template": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "illustration": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "template",
                "name",
                "illustration"
            ],
            "additionalProperties": false
        },
        "integration": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "additionalProperties": false
        },
        "featureFlag": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": [
                        "string",
                        "boolean"
                    ]
                }
            },
            "required": [
                "name",
                "value"
            ],
            "additionalProperties": false
        },
        "description": {
            "type": "object",
            "properties": {
                "channel": {
                    "$ref": "#/$defs/translatableString"
                },
                "board": {
                    "$ref": "#/$defs/translatableString"
                },
                "playbook": {
                    "$ref": "#/$defs/translatableString"
                },
                "integration": {
                    "allOf": [
                        {
                            "$ref": "#/$defs/translatableString"
                        }
                    ],
                    "properties": {
                        "illustration": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "illustration"
                    ]
                }
            },
            "required": []
        },
        "translatableString": {
            "type": "object",
            "properties": {
                "i18nId": {
                    "type": "string"
                },
                "defaultText": {
                    "type": "string",
                    "minlength": 1
                }
            },
            "required": [
                "defaultText"
            ]
        }
    }
}